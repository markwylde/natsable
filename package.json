{
  "name": "natsable",
  "version": "1.2.2",
  "description": "A notable GUI for NATS.io with user management and client certificate management",
  "type": "module",
  "main": "src/server.ts",
  "scripts": {
    "start": "node --experimental-strip-types src/server.ts",
    "dev": "node --watch --experimental-strip-types src/server.ts",
    "demo": "node --watch --experimental-strip-types src/demo.ts",
    "generate-certs": "./scripts/generate-certs.sh",
    "docker:up": "docker compose up -d nats",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f nats",
    "type-check": "tsc --noEmit",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "tidy": "biome check --write ."
  },
  "keywords": ["nats", "gui", "certificate-management", "user-management"],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/markwylde/natsable.git"
  },
  "release": {
    "branches": ["main"],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      [
        "@semantic-release/exec",
        {
          "publishCmd": "docker build -t ghcr.io/markwylde/natsable:v${nextRelease.version} -t ghcr.io/markwylde/natsable:latest . && docker push --all-tags ghcr.io/markwylde/natsable"
        }
      ],
      "@semantic-release/github",
      "@semantic-release/git"
    ]
  },
  "dependencies": {
    "express": "^5.2.1",
    "nats": "^2.29.3",
    "node-forge": "^1.3.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.2",
    "@types/node-forge": "^1.3.14",
    "semantic-release": "^25.0.2",
    "typescript": "^5.7.2"
  }
}
